<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Version>1.6.2</Version>
    <Author>Anthony A. Hauck</Author>
    <Company>Hypar Inc.</Company>
    <Description>Extensions to to Hypar.Elements.Geometry and Polygon creation utilities</Description>
    <Copyright>(c) Hypar Inc. 2019</Copyright>
    <PackageProjectUrl>https://github.com/hypar-io/GeometryEx</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hypar-io/GeometryEx</RepositoryUrl>
    <PackageTags>Hypar Elements Geometry Extensions Polygon</PackageTags>
    <PackageReleaseNotes>- Upgraded to Hypar Elements 3.2
- Removed Polygon.CenterOfMass in favor of fixed Polygon.Centroid in Hypar Elements 3.2.</PackageReleaseNotes>
    <AssemblyVersion>1.6.2.0</AssemblyVersion>
    <FileVersion>1.6.2.0</FileVersion>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="nuget\**" />
    <EmbeddedResource Remove="nuget\**" />
    <None Remove="nuget\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="GeometryEx.nuspec" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hypar.Elements" Version="0.3.2" />
    <PackageReference Include="ParagonClipper" Version="6.4.2" />
  </ItemGroup>

</Project>
